.edit
  .edit__header
  = render 'header'
  .edit__main
    %h1 パスワード変更
    .edit__panel
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "user-textform"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          メールアドレスが確認できません。
      .field
        = f.label :password
        %i 
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "user-textform"
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            文字以上です
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "user-textform"
      .field
        = f.label :current_password
        %i 
        %br/
        = f.password_field :current_password, autocomplete: "current-password", class: "user-textform"
      .actions
        = f.submit "パスワードを更新する"
    %h3 アカウント削除
    %p
      #{button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete}
    = link_to "マイページへ戻る", :back
  .edit__footer
  = render 'footer'
