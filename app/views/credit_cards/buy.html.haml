.buy_verification
  .buy_verification__box
    %h1.verification__box--title 購入内容の確認
    .buy_verification__box--content
      .image 
        = image_tag("http://illustrain.com/img/work/2016/illustrain02-norimono17.png",class: "image_verification")
      .content
        .content__name 
          =@item.name
        .content__price 
          =@item.price 
    .buy_verification__box--price
      %p.title 支払い金額
      .price
        %p.detail 
          = @item.price
        %p 円
    .buy_verification__box--payment_method 
      %p.title 支払い方法
      %p 
        - if @default_card_information.blank?
          %br /
        - else
          -#以下カード情報を表示
          = "**** **** **** " + @default_card_information.last4
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
    .buy_verification__box--shipping_address 
      %p.title 配達先
      %p.detail なんばスカイオ
    .form
      = link_to items_path(@item.id), method: :post 