.main-content
  = render "show_user_info"
  %section.main-content__mypage-tab__container
    %h2.mypage-tab__head
      購入した商品
    %ul.mypage-tab
      %li.tab-active
        =link_to "取引中" ,"#" , class: "mypage-tab__list" ,id:"mypage-tab__list-new"
      %li
        =link_to "過去の取引","#" , class: "mypage-tab__list" ,id:"mypage-tab__list-old"
    .tab__content
      %ul.tab__content.favorite__lists
        - @user.favorite_items.each do |item|
          %li.tab__content__list
            =link_to item_path(item.id), class: "tab__content__list-box favorite__lists" do
              .list-image
                =image_tag item.item_images[0].image.url, alt: "",id: "",class: "item-thumbnail"
                .list-text
                  .list-text-price
                    %span ¥
                    = item.price
                  .list-text-icon
                    %span.icon ♡ 
                    %span.favorite
                    = item.favorites.count
                .list-text-name
                  = item.name.truncate(40, omission: '...')
                  .list-text-name-introduction
                    = item.introduction.truncate(50, omission: '...')
              %i.fas.fa-chevron-right.nav-icon
        %li.tab__content__list
          .tab__content__list__index
            =link_to "一覧を見る", "", class: "tab__content__list__index-btn"
      %ul.tab__content#tab__content-old.display--none
        - @user.favorite_items.each do |item|
          %li.tab__content__list
            =link_to item_path(item.id), class: "tab__content__list-box favorite__lists" do
              .list-image
                =image_tag item.item_images[0].image.url, alt: "",id: "",class: "item-thumbnail"
                .list-text
                  .list-text-price
                    %span ¥
                    = item.price
                  .list-text-icon
                    %span.icon ♡ 
                    %span.favorite
                    = item.favorites.count
                .list-text-name
                  = item.name.truncate(40, omission: '...')
                  .list-text-name-introduction
                    = item.introduction.truncate(50, omission: '...')
              %i.fas.fa-chevron-right.nav-icon

        %li.tab__content__list
          .tab__content__list__index
            =link_to "一覧を見る", "", class: "tab__content__list__index-btn"