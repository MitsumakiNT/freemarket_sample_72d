= render "items/header"
.container
  %main.main-container
    / 以下サイドバーの部分テンプレート
    = render partial: "show_sidebar", locals: {}
    .main-content
      = render "show_user_info"
      %section.main-content__mypage-tab__container
        %h2.mypage-tab__head
          出品した商品
        %ul.mypage-tab
          %li
            =link_to "出品中" ,selling_user_path , class: "mypage-tab__list three-tabs-list" ,id:"mypage-tab__list-new"
          %li
            =link_to "取引中",sell_transaction_user_path , class: "mypage-tab__list three-tabs-list" ,id:"mypage-tab__list-transaction"
          %li.tab-active-three
            =link_to "過去の取引",sold_user_path , class: "mypage-tab__list three-tabs-list" ,id:"mypage-tab__list-old"

        .tab__content.favorite__lists
          %ul.tab__content#tab__content-old.display--none
            - if @sold_transaction_end_items.present?
              - @sold_transaction_end_items.each do |item|
                %li.tab__content__list
                  =link_to item_path(item.id), class: "tab__content__list-box favorite__lists" do
                    .list-image
                      =image_tag item.item_images[0].image.url, alt: "",id: "",class: "item-thumbnail"
                      .list-text
                        .list-text-price
                          %span ¥
                          = item.price
                        .list-text-icon.transaction
                          %span.icon 取引中 
                      .list-text-name
                        = item.name.truncate(40, omission: '...')
                        .list-text-name-introduction
                          = item.introduction.truncate(50, omission: '...')
                    %i.fas.fa-chevron-right.nav-icon
            - else
              .tab__display__empty
                NO DATA
                = image_tag "" , class: "empty__logo"

= render "items/exhibition"
= render "items/footer"